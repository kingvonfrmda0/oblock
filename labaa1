#include <iostream>
#include <string>

class Player {
private:
    std::string name;     // имя игрока
    int hp;               // здоровье

protected:
    float x;              // позиция X
    float y;              // позиция Y

public:
    std::string status;   // статус действия

    //конструктор по умолчанию
    Player() {
        name = "Неизвестный";
        x = 0;
        y = 0;
        hp = 100;
        status = "Стоит";
    }

    //конструктор полного заполнения
    Player(std::string n, float posX, float posY, int health, std::string st) {
        name = n;
        x = posX;
        y = posY;
        hp = health;
        status = st;

        if (hp < 0) hp = 0;
        if (hp > 100) hp = 100;
    }

    //конструктор копирования
    Player(const Player& other) {
        name = other.name;
        x = other.x;
        y = other.y;
        hp = other.hp;
        status = other.status;
    }

    //деструктор
    ~Player() {
        std::cout << "Деструктор Player вызван" << std::endl;
    }


    std::string getName() {
        return name;
    }

    int getHp() {
        return hp;
    }

    float getX() {
        return x;
    }

    float getY() {
        return y;
    }

    std::string getStatus() {
        return status;
    }

    //сеттер позиции X
    void setX(float posX) {
        x = posX;
    }

    //сеттер позиции Y
    void setY(float posY) {
        y = posY;
    }

    //получение урона
    void takeDamage(int dmg) {
        if (dmg > 0) {
            hp = hp - dmg;
            if (hp < 0) {
                hp = 0;
                status = "Мертв";
            }
        }
    }

    //лечение
    void heal(int value) {
        if (value > 0 && hp > 0) {
            hp = hp + value;
            if (hp > 100) {
                hp = 100;
            }
        }
    }

    //вывод всей информации
    void printInfo() {
        std::cout << "Имя: " << name << std::endl;
        std::cout << "X: " << x << std::endl;
        std::cout << "Y: " << y << std::endl;
        std::cout << "HP: " << hp << std::endl;
        std::cout << "Статус: " << status << std::endl;
        std::cout << "---------------------" << std::endl;
    }
};

int main() {

    Player p1;
    p1.printInfo();

    Player p2("Игрок", 10, 20, 80, "Бежит");
    p2.printInfo();

    Player p3 = p2;
    p3.printInfo();

    p1.setX(50);
    p1.setY(60);
    p1.takeDamage(30);
    p1.heal(10);
    p1.printInfo();

    return 0;
}
